@using Reactor.Web.ViewModels.Chat
@model Reactor.Web.ViewModels.Chat.ChatModel
    @if (Model.Position == MessagePosition.Left)
    {
        <div class="chat-box__container chat-box__container-left clearfix">
            <div class="chat-box__inner-left">
                <img class="chat-box__img-left" src="@Model.ProfilePicture" data-toggle="tooltip" title="@Model.FullName" data-placement="top"/>

                <div class="chat-box__message clearfix">
                    @Model.Message
                </div>
                <time class="timeago chat-box__time pull-left" datetime="@Model.CreatedOn.ToString("o")"></time>
            </div>
         
        </div>
        
    }
    else
    {
        <div class="chat-box__container chat-box__container-right clearfix">
       
            <div class="chat-box__inner-right">
                <img class="chat-box__img-right" src="@Model.ProfilePicture" data-toggle="tooltip" title="@Model.FullName" data-placement="top"/>
                <div class="chat-box__message">
                    @Model.Message

                </div>
                <time class="timeago chat-box__time pull-right" datetime="@Model.CreatedOn.ToString("o")"></time>

            </div>
          
        </div>
        
    }


