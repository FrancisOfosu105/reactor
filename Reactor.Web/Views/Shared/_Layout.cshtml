@inject IUserService UserService
@{
    var user = await UserService.GetUserByIdAsync(await UserService.GetCurrentUserIdAsync());
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/styles/bootstrap.css"/>
    <link rel="stylesheet" href="~/assets/styles/font-awesome.css"/>
    <link rel="stylesheet" href="~/assets/styles/styles.css" asp-append-version="true"/>
    <title>@ViewData["Title"] - Reactor</title>
</head>
<body>
<div class="img-overlay">
    <div class="img-overlay__photo-box">
        <img src="" class="img-overlay__photo" alt="overlay"/>
    </div>
    <span class="img-overlay__close"> &times;</span>
</div>
<header>
    <nav class="navbar navbar-expand-md navbar-light fixed-top bg-light">
        <div class="container">
            <div class="collapse navbar-collapse">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Reactor</a>

                <ul class="navbar-nav ml-auto">

                    <li class="nav-item dropdown" id="notifications" title="notifications">

                        @await Component.InvokeAsync("Notifications")
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Chat" title="chats" asp-action="Index">
                            <i class="fa fa-envelope-o"></i>
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Friend" title="friends" asp-action="List">
                            <i class="fa fa-users"></i>
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" asp-controller="Profile" asp-action="Profile" asp-route-username="@user.UserName">
                            <i class="fa fa-user-o"></i> Welcome, @user.FullName
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Settings" asp-action="Basic">
                            <i class="fa fa-cog"></i> Settings
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<main>
    @RenderBody()

</main>
<footer>

</footer>
<div class="loader">
    <img class="loader__icon" src="~/assets/images/spinner.svg" alt="Spinner"/>
</div>

<script type="text/javascript" src="~/assets/scripts/manifest.js" asp-append-version="true"></script>
<script type="text/javascript" src="~/assets/scripts/vendor.js" asp-append-version="true"></script>
<script type="text/javascript" src="~/assets/scripts/app.js" asp-append-version="true"></script>
</body>
</html>