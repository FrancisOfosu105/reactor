@inject IUserService UserService
@{
    var user = await UserService.GetUserByIdAsync(await UserService.GetCurrentUserIdAsync());
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/styles/bootstrap.css"/>
    <link rel="stylesheet" href="~/assets/styles/font-awesome.css"/>
    <link rel="stylesheet" href="~/assets/styles/styles.css" asp-append-version="true"/>
    <title>@ViewData["Title"] - Reactor</title>
</head>
<body>
<div class="img-overlay">
    <div class="img-overlay__photo-box">
        <img src="" class="img-overlay__photo"/>
    </div>
    <span class="img-overlay__close"> &times;</span>
</div>
<header>
    <nav class="navbar navbar-expand-md navbar-light fixed-top bg-light">
        @* <a asp-controller="Home" asp-action="Index" class="navbar-brand">Reactor</a> *@
        <div class="container">
              <div class="collapse navbar-collapse">

            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Reactor</a>

            <ul class="navbar-nav ml-auto">

                @await Component.InvokeAsync("Notifications")
                
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Chat" title="chats" asp-action="Index">
                        <i class="fa fa-envelope-o"></i>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Friend" title="friends" asp-action="List">
                        <i class="fa fa-users"></i>
                    </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-controller="Profile" asp-action="Index" asp-route-username="@user.UserName">
                        <i class="fa fa-user-o"></i> Welcome, @user.FullName
                    </a>
                </li>
            </ul>
        </div>
        </div>
    </nav>
</header>
<main>
    @RenderBody()

</main>
<footer>

</footer>
<script type="text/javascript" src="~/assets/scripts/app-bundle.js" asp-append-version="true"></script>
<script type="text/javascript" src="~/assets/scripts/vendor-bundle.js" asp-append-version="true"></script>
<form asp-antiforgery="true"></form>
</body>
</html>