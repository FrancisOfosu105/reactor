@model Reactor.Web.Models.Home.HomeModel

@{
    ViewBag.Title = "Home Page";
    Layout = "_Layout";
}
<section class="home">

    <div class="container">
        <div class="row mt-2">
            <div class="col-md-3">
                Col 1
            </div>
            <div class="col-md-6">
                <div class="status">
                    <form asp-controller="Home" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="mr-3 status__photo-box">
                            <img src="@Model.UserProfilePicture" class="status__photo" width="50" height="50"/>
                        </div>

                        <textarea  class="form__input status__input" asp-for="Content"  required placeholder="Say something here"></textarea>

                        <div class="mt-3 clearfix">
                            <input type="file" id="file" accept=".jpg,.jpeg,.png,.gif" class="form__input-file js-inputfile" asp-for="Files" data-multiple-caption="{count} files selected" multiple/>
                            <label for="file" class="u-margin-left-medium"><i class="fa fa-image"></i>&nbsp; <span>Photo</span></label>
                            <div class="float-right">
                                <button type="submit" class="btn btn-success"><i class="fa fa-globe"></i> Post</button>
                            </div>
                        </div>

                    </form>

                </div>

                <div class="row mt-3">
                    @* List of posts  *@
                    <div class="col-12" id="post-container" data-url="/home/getposts">
                    </div>

                    <div class=" no-posts d-none text-center p-2 w-100">
                        <h2 class="text-capitalize">No more posts</h2>
                    </div>

                    @if (Model.PostLoadMore)
                    {
                        <span class="d-none" id="post-loadMore">@Model.PostLoadMore</span>
                    }
                    else
                    {
                        <span class="d-none" id="post-loadMore"></span>
                    }


                    <div class="loader">
                        <span class="fa fa-spin fa-spinner loader__icon"></span>
                        please wait...
                    </div>

                </div>

            </div>
            <div class="col-md-3">
                @await Component.InvokeAsync("SuggestedFriends")
            </div>
        </div>

    </div>

   @await Html.PartialAsync("_AntiForgery")
    
</section>
